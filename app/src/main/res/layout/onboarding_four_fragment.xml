<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kronaone_regular"
        android:text="@string/sporthub"
        android:textColor="@color/header"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_profilpicture"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:srcCompat="@drawable/images__1_" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/kronaone_regular"
        android:text="Ihr Name"
        android:textAllCaps="true"
        android:textColor="@color/header"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profilpicture" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/kronaone_regular"
        android:text="LEVEL"
        android:textAllCaps="true"
        android:textColor="@color/tags"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profilpicture" />

    <Button
        android:id="@+id/bt_sportsOne"
        style="@style/tags"
        android:layout_width="110dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="SPORT1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <Button
        android:id="@+id/bt_sportsTwo"
        style="@style/tags"
        android:layout_width="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="SPORT2"
        app:layout_constraintStart_toEndOf="@+id/bt_sportsOne"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <Button
        android:id="@+id/bt_picturePacker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/header"
        android:fontFamily="@font/kronaone_regular"
        android:text="BILD HOCHLADEN"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_weiter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/bt_weiter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/header"
        android:fontFamily="@font/kronaone_regular"
        android:text="WEITER"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/back"
        style="@style/ctab_infos"
        android:layout_width="160dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="24dp"
        android:text="ZURÜCK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_weiter" />

    <TextView
        android:id="@+id/tv_title_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/kronaone_regular"
        android:text="Stats"
        android:textColor="@color/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_sportsOne" />

    <View
        android:id="@+id/view2"
        android:layout_width="340dp"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:background="@color/header"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_title_"
        app:layout_constraintTop_toTopOf="@+id/tv_title_" />


    <ImageView
        android:id="@+id/bg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_"
        app:srcCompat="@drawable/text_field_gray"
        tools:ignore="UnknownIdInLayout" />

    <TextView
        android:id="@+id/tv_stat_age"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/kronaone_regular"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/bg1"
        app:layout_constraintStart_toStartOf="@+id/bg1"
        app:layout_constraintTop_toTopOf="@+id/bg1" />

    <TextView
        android:id="@+id/text_stat_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Alter"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg1"
        app:layout_constraintEnd_toEndOf="@+id/bg1"
        app:layout_constraintStart_toStartOf="@+id/bg1" />

    <ImageView
        android:id="@+id/bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_"
        app:srcCompat="@drawable/text_field_gray"
        tools:ignore="UnknownIdInLayout" />

    <TextView
        android:id="@+id/tv_stat_matches"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/kronaone_regular"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/bg2"
        app:layout_constraintStart_toStartOf="@+id/bg2"
        app:layout_constraintTop_toTopOf="@+id/bg2" />

    <TextView
        android:id="@+id/matches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/inter_semibold"
        android:text="MATCHES"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg2"
        app:layout_constraintEnd_toEndOf="@+id/bg2"
        app:layout_constraintStart_toStartOf="@+id/bg2" />

    <ImageView
        android:id="@+id/bg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/bg2"
        app:layout_constraintStart_toEndOf="@+id/bg1"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_"
        app:srcCompat="@drawable/text_field_gray"
        tools:ignore="UnknownIdInLayout" />

    <TextView
        android:id="@+id/tv_stat_size"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/kronaone_regular"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/bg3"
        app:layout_constraintStart_toStartOf="@+id/bg3"
        app:layout_constraintTop_toTopOf="@+id/bg3" />

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/inter_semibold"
        android:text="GRÖSSE"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg3"
        app:layout_constraintEnd_toEndOf="@+id/bg3"
        app:layout_constraintStart_toStartOf="@+id/bg3" />

    <ImageView
        android:id="@+id/bg4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_"
        app:srcCompat="@drawable/text_field_gray"
        tools:ignore="UnknownIdInLayout" />

    <TextView
        android:id="@+id/tv_stat_pokale"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/kronaone_regular"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/bg4"
        app:layout_constraintStart_toStartOf="@+id/bg4"
        app:layout_constraintTop_toTopOf="@+id/bg4" />

    <TextView
        android:id="@+id/pokale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/inter_semibold"
        android:text="POKALE"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg4"
        app:layout_constraintEnd_toEndOf="@+id/bg4"
        app:layout_constraintStart_toStartOf="@+id/bg4" />

    <ImageView
        android:id="@+id/bg5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/bg4"
        app:layout_constraintStart_toEndOf="@+id/bg2"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_"
        app:srcCompat="@drawable/text_field_gray"
        tools:ignore="UnknownIdInLayout" />

    <TextView
        android:id="@+id/tv_stat_wins"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/kronaone_regular"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/bg5"
        app:layout_constraintStart_toStartOf="@+id/bg5"
        app:layout_constraintTop_toTopOf="@+id/bg5" />

    <TextView
        android:id="@+id/wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/inter_semibold"
        android:text="WINS"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg5"
        app:layout_constraintEnd_toEndOf="@+id/bg5"
        app:layout_constraintStart_toStartOf="@+id/bg5" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/bg2">

        <TextView
            android:id="@+id/bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/kronaone_regular"
            android:text="Bio"
            android:textColor="@color/header" />

        <View
            android:id="@+id/view2f"
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@color/header" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bio_"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/inter_light"
        android:orientation="horizontal"
        android:text="Hallo, mein Name ist Timo Freitag und ich bin leidenschaftlicher Hockeyspieler, Snowboarder, Fussballer und Dartspieler. Ja ich weiß das sind eine Menge Sportarten :D"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />


</androidx.constraintlayout.widget.ConstraintLayout>