<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/kronaone_regular"
        android:text="KALENDER"
        android:textColor="@color/header"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/CHANGE"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/CHANGE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_settings_background" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/kronaone_regular"
        android:text="@string/sporthub"
        android:textColor="@color/header"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_title"
        app:layout_constraintEnd_toStartOf="@+id/CHANGE"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        style="@style/ib_back"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_profilpictures"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:srcCompat="@drawable/ads" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/kronaone_regular"
        android:text="Halstenbeker HockeyClub"
        android:textAllCaps="true"
        android:textColor="@color/header"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Hamburg, Deutschland"
        android:textColor="@color/gray_Text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="MO"
                android:textColor="@color/header"
                android:textSize="18dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="DI"
                android:textColor="@color/header"
                android:textSize="18dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="MI"
                android:textColor="@color/header"
                android:textSize="18dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="DO"
                android:textColor="@color/header"
                android:textSize="18dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="FR"
                android:textColor="@color/header"
                android:textSize="18dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="SA"
                android:textColor="@color/header"
                android:textSize="18dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="SO"
                android:textColor="@color/header"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="04"
                android:textColor="@color/header"
                android:textSize="14dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="05"
                android:textColor="@color/header"
                android:textSize="14dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="06"
                android:textColor="@color/header"
                android:textSize="14dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="07"
                android:textColor="@color/header"
                android:textSize="14dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="08"
                android:textColor="@color/header"
                android:textSize="14dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="09"
                android:textColor="@color/header"
                android:textSize="14dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="10"
                android:textColor="@color/header"
                android:textSize="14dp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/dropdownButton12"
        style="@style/ib_dd_sort"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <Button
        android:id="@+id/button3"
        style="@style/ctab_saved"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />


</androidx.constraintlayout.widget.ConstraintLayout>