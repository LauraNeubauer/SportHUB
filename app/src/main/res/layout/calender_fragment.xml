<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/kronaone_regular"
        android:text="KALENDER"
        android:textColor="@color/header"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/CHANGE"
        app:layout_constraintStart_toEndOf="@+id/bt_add"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/CHANGE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_settings_background" />

    <TextView
        android:id="@+id/sporthub"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/kronaone_regular"
        android:text="@string/sporthub"
        android:textColor="@color/header"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_title"
        app:layout_constraintEnd_toStartOf="@+id/CHANGE"
        app:layout_constraintStart_toEndOf="@+id/bt_add"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/bt_add"
        style="@style/ib_back"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_profilpictures"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ads"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_add"
        app:srcCompat="@drawable/ads" />

    <TextView
        android:id="@+id/tv_club_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/kronaone_regular"
        android:text="Halstenbeker HockeyClub"
        android:textAllCaps="true"
        android:textColor="@color/header"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ads" />


    <TextView
        android:id="@+id/tv_club_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Hamburg, Deutschland"
        android:textColor="@color/gray_Text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_club_name" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_club_place">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="MO"
                android:textColor="@color/header"
                android:textSize="18dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="DI"
                android:textColor="@color/header"
                android:textSize="18dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="MI"
                android:textColor="@color/header"
                android:textSize="18dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="DO"
                android:textColor="@color/header"
                android:textSize="18dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="FR"
                android:textColor="@color/header"
                android:textSize="18dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="SA"
                android:textColor="@color/header"
                android:textSize="18dp" />

            <TextView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="SO"
                android:textColor="@color/header"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_one"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="04"
                android:textColor="@color/header"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/date_two"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="05"
                android:textColor="@color/header"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/date_three"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="06"
                android:textColor="@color/header"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/date_four"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="07"
                android:textColor="@color/header"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/date_five"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="08"
                android:textColor="@color/header"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/date_six"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="09"
                android:textColor="@color/header"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/date_seven"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/kronaone_regular"
                android:gravity="center_horizontal"
                android:text="10"
                android:textColor="@color/header"
                android:textSize="14dp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/dd_bt_sort_cal"
        style="@style/ib_dd_sort"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <Button
        android:id="@+id/bt_saved"
        style="@style/ctab_saved"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_events"
        android:layout_width="409dp"
        android:layout_height="210dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_" />

    <TextView
        android:id="@+id/tv_title_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kronaone_regular"
        android:text="Nächste Events"
        android:textColor="@color/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dd_bt_sort_cal" />

    <Button
        android:id="@+id/bt_show_all_events"
        style="@style/ctab_saved"
        android:text="Alle"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <View
        android:id="@+id/view2"
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="-15dp"
        android:background="@color/header"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title_"
        app:layout_constraintEnd_toStartOf="@+id/bt_show_all_events"
        app:layout_constraintStart_toEndOf="@+id/tv_title_"
        app:layout_constraintTop_toTopOf="@+id/tv_title_" />

</androidx.constraintlayout.widget.ConstraintLayout>